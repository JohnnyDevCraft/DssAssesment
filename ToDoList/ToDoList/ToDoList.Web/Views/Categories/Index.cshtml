
@{
    ViewBag.Title = "Categories";
}

<div class="container" ng-controller="categoriesController">
    <div id="listView">
        <h2>Current Categories</h2>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
            <tr ng-repeat="cat in categories track by cat.Id">
                <td>{{cat.Id}}</td>
                <td>{{cat.Name}}</td>
                <td>{{cat.Description}}</td>
                <td>
                    <button class="btn btn-lg btn-default" ng-click="EditItem({{cat.Id}})">Edit</button>
                    <button class="btn btn-lg btn-success" ng-click="NewItem()">New</button>
                    <button class="btn btn-lg btn-danger" ng-click="Delete({{cat.Id}})">Delete</button>
                </td>
            </tr>
        </table>
    </div>
    <div id="EditItem">
        <form>
            <h2>Edit Item: {{itemEditing.Name}}</h2>
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" ng-model="itemEditing.Name" id="Name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text"  class="form-control" ng-model="itemEditing.Description" id="Description" placeholder="Description">
            </div>           
            <button class="btn btn-default" ng-click="SaveEdit()">Save Changes</button>
            <button class="btn btn-danger" ng-click="CancelEdit()">Cancel</button>
        </form>
    </div>
    <div id="CreateItem">
        <form>
            <h2>Create New Item</h2>
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" ng-model="newItem.Name" id="Name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text" class="form-control" ng-model="newItem.Description" id="Description" placeholder="Description">
            </div>
            <button class="btn btn-default" ng-click="SaveNew()">Save New</button>
            <button class="btn btn-danger" ng-click="CancelNew()">Cancel</button>
        </form>
    </div>
    
</div>

